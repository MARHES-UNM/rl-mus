    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run All Unit Tests",
            "type": "python",
            "request": "launch",
            "module": "unittest",
            "justMyCode": true,
            "env": {
                // "DISPLAY": "192.168.1.11:0.0"
                // "DISPLAY": "192.168.243.10:0.0"
            },
            "args": [
                "-v"
            ]
        },
        {
            "name": "unittest_target",
            "type": "python",
            "request": "launch",
            "module": "unittest",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "DISPLAY": "192.168.1.11:0.0"
            },
            "args": [
                "-v",
                "${cwd}/tests/test_target.py"
            ]
        },
        {
            "name": "unittest_uav",
            "type": "python",
            "request": "launch",
            "module": "unittest",
            // "program": "${cwd}/tests/test_uav.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "DISPLAY": "192.168.1.11:0.0"
                // "DISPLAY": "192.168.243.10:0.0"
            },
            "args": [
                "-v",
                "${cwd}/tests/test_uav.py"
            ]
        },
        {
            "name": "unittest_uav_sim",
            "type": "python",
            "request": "launch",
            "module": "unittest",
            // "program": "${cwd}/uav_sim/tests/test_uav_sim.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "DISPLAY": "192.168.1.11:0.0"
            },
            "args": [
                "${cwd}/tests/test_uav_sim.py"
            ]
        }
    ]
}